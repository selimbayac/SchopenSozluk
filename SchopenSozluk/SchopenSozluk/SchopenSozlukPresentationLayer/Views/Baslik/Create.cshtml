@model SchopenSozlukEntityLayer.Concrete.Baslik

<h1 class="text-center mb-4">Yeni Başlık Oluştur</h1>

<div class="container">
    <form id="createBaslikForm" asp-controller="Baslik" asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name">Başlık Adı:</label>
            <input asp-for="Name" class="form-control" placeholder="Başlık adını girin" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
      
        <button type="submit" class="btn btn-primary btn-block">Başlık Oluştur</button>
    </form>
</div>

<script>
    document.getElementById('createBaslikForm').addEventListener('submit', function (event) {
        var entryContent = document.getElementById('EntryContent').value;
        if (!entryContent.trim()) {
            event.preventDefault();
            document.getElementById('entryContentError').style.display = 'block';
        } else {
            document.getElementById('entryContentError').style.display = 'none';
        }
    });
</script>

<style>
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 4px;
        padding: 0.75rem;
        font-size: 1rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        padding: 0.75rem;
        font-size: 1rem;
        color: #fff;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .text-danger {
        color: #dc3545;
    }

    .container {
        max-width: 400px;
        margin: 0 auto;
    }

    .text-center {
        text-align: center;
    }
</style>
