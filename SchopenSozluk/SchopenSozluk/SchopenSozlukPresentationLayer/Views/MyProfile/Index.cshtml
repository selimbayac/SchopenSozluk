@model SchopenSozlukPresentationLayer.Models.UserProfileViewModel

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profil Sayfası</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Helvetica Neue', Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .container {
            max-width: 900px;
            margin: 40px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .profile-header {
            text-align: center;
            padding: 20px;
            border-bottom: 1px solid #e0e0e0;
        }

            .profile-header h2 {
                margin-top: 15px;
                font-size: 28px;
                color: #007bff;
            }

            .profile-header p {
                color: #555;
                font-size: 16px;
                margin-bottom: 0;
            }

        .profile-update-form {
            margin-top: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-weight: bold;
            color: #444;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .btn {
            display: block;
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-danger {
            background-color: #dc3545;
            color: #fff;
            transition: background-color 0.3s ease;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .user-content {
            margin-top: 40px;
        }

            .user-content h3 {
                margin-bottom: 20px;
                color: #007bff;
            }

        ul {
            list-style: none;
            padding: 0;
        }

            ul li {
                padding: 15px;
                border-bottom: 1px solid #e0e0e0;
            }

                ul li:last-child {
                    border-bottom: none;
                }

        .logout-button {
            margin-top: 30px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="profile-header">
            <h2>@Model.UserName</h2>
            <p>@Model.Name @Model.Surname</p>
            <p>@Model.Bio</p>
        </div>

        <div class="profile-update-form">
            <form asp-action="UpdateProfile" method="post">
                <div class="form-group">
                    <label for="Username">Kullanıcı Adı:</label>
                    <input type="text" id="Username" name="Username" value="@Model.UserName" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Name">Ad:</label>
                    <input type="text" id="Name" name="Name" value="@Model.Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Surname">Soyad:</label>
                    <input type="text" id="Surname" name="Surname" value="@Model.Surname" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Bio">Hakkında:</label>
                    <textarea id="Bio" name="Bio" class="form-control" rows="4">@Model.Bio</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Profil Güncelle</button>
            </form>
        </div>

        <div class="user-content">
            <h3>Başlıklarınız</h3>
            <ul>
                @foreach (var baslik in Model.Basliklar)
                {
                    <li>
                        <a asp-controller="Baslik" asp-action="BaslikDetay" asp-route-id="@baslik.Id">
                            @baslik.Name (Oluşturulma Tarihi: @baslik.CreatedAt)
                        </a>
                    </li>
                }
            </ul>
        </div>

        <div class="logout-button">
            <form asp-action="Logout" method="post">
                <button type="submit" class="btn btn-danger">Çıkış Yap</button>
            </form>
        </div>
    </div>
</body>
</html>
